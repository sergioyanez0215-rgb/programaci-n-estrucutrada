#include <stdio.h>

int main() {
    int numero;

    printf("Ingresa numeros positivos (ingresa uno negativo para salir):\n");

    while (1) {
        printf("Numero: ");
        scanf("%d", &numero);

        if (numero < 0) {
            break;
        }

        printf("Has ingresado: %d\n", numero);
    }

    printf("Fin del programa.\n");
    return 0;
}
